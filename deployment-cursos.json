{
    "kind": "Deployment",
    "apiVersion": "apps/v1",
    "metadata": {
        "name": "ms-cursos"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "app": "ms-cursos"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "ms-cursos"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "cursos",
                        "image": "jesusdevback95/cursos:latest",
                        "ports": [
                            {
                                "containerPort": 8002
                            }
                        ],
                        "env": [
                            {
                                "name": "PORT",
                                "valueFrom": {
                                    "configMapKey": {
                                        "name": "ms-cursos",
                                        "key": "port"
                                    }
                                }
                            },
                            {
                                "name": "DB_HOST",
                                "valueFrom": {
                                    "configMapKey": {
                                        "name": "ms-cursos",
                                        "key": "host"
                                    }
                                }
                            },
                            {
                                "name": "DB_DATABASE",
                                "valueFrom": {
                                    "configMapKey": {
                                        "name": "ms-cursos",
                                        "key": "database"
                                    }
                                }
                            },
                            {
                                "name": "DB_USER_NAME",
                                "valueFrom": {
                                    "configMapKey": {
                                        "name": "ms-cursos",
                                        "key": "username"
                                    }
                                }
                            },
                            {
                                "name": "DB_PASSWORD",
                                "valueFrom": {
                                    "configMapKey": {
                                        "name": "ms-cursos",
                                        "key": "password"
                                    }
                                }
                            },
                            {
                                "name": "USUARIOS_URL",
                                "valueFrom": {
                                    "configMapKey": {
                                        "name": "ms-cursos",
                                        "key": "api_usuarios"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        }
    }
}
